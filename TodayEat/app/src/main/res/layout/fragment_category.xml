<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_ivory"
    tools:context=".ui.category.Category">

    <!-- 텍스트뷰 -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/pretendard_extrabold"
        android:text="카테고리"
        android:textSize="32sp"
        android:paddingBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 첫 번째 카드뷰 -->
    <ImageView
        android:id="@+id/cardView_main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@null"
        android:elevation="4dp"
        app:cardCornerRadius="16dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/catemain1"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.38"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.45"/>

    <!-- 두 번째 카드뷰 -->
    <ImageView
        android:id="@+id/cardView_side"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@null"
        android:elevation="4dp"
        app:cardCornerRadius="16dp"
        android:src="@drawable/cateside1"
        android:scaleType="fitCenter"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.38"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.45"/>

    <!-- 세 번째 카드뷰 -->
    <ImageView
        android:id="@+id/cardView_soup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@null"
        android:elevation="4dp"
        app:cardCornerRadius="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/catesoup1"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardView_main"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.38"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.45"/>

    <!-- 네 번째 카드뷰 -->
    <ImageView
        android:id="@+id/cardView_recommend"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@null"
        android:elevation="4dp"
        app:cardCornerRadius="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/cateai"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardView_side"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.38"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.45"/>

</androidx.constraintlayout.widget.ConstraintLayout>
