<resources>

    <style name="radious" parent="">
        <item name="cornerSize">50%</item>
    </style>


    <!-- 텍스트 스타일 정의 -->
    <style name="blackMainText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">35sp</item>
        <item name="android:fontFamily">@font/pretendard_extrabold</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="blackContentText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="blackSubText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/pretendard_r</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="whiteMainText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">35sp</item>
        <item name="android:fontFamily">@font/pretendard_extrabold</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="whiteContentText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="whiteSubText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/pretendard_r</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="CustomMaterialButton1">
        <item name="android:backgroundTint">@color/main_yellow</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
    </style>

    <style name="CustomMaterialButton2">
        <item name="android:backgroundTint">@color/main_gray</item>
        <item name="android:elevation">4dp</item>
